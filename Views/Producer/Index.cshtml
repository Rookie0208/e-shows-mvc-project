@model IEnumerable<e_shows.Models.Producer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @* <a asp-action="Create">Create New</a> *@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PBio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PBio)
            </td>
            
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.PId"><i class="bi bi-pencil-square"></i></a> |
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.PId"><i class="bi bi-info-square"></i></a> |
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.PId"><i class="bi bi-trash"></i></a>
                </td>
            
        </tr>
}
    </tbody>
