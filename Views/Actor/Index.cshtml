@model IEnumerable<e_shows.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActBio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @* @Html.DisplayFor(modelItem => item.ActImageUrl) *@
                <img class="rounded-circle" src="@item.ActImageUrl" alt="@item.ActName" style="max-width:150px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActBio)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ActId"><i class="bi bi-pencil-square"></i></a> |
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ActId"><i class="bi bi-info-square"></i></a> |
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ActId"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
